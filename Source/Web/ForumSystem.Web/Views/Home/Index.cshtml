@model IEnumerable<ForumSystem.Web.ViewModels.Home.IndexBlogPostViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


<div class="container">

    @foreach (var post in Model)
    {
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-2">
                <div class="row">
                    <p>@post.Title</p>
                </div>
                <div class="row">
                    <p>answered 11 minutes ago in C# Programming by addi (2,710 points)</p>
                </div>
                <div class="row">
                    <span class="badge">
                        kids
                    </span>
                    <span class="badge">
                        academy
                    </span>
                    <span class="badge">
                        sample badge
                    </span>
                </div>
            </div>
        </div>
        <hr />
    }
</div>
